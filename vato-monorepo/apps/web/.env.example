# PostgreSQL Database Configuration
# Copy this file to .env.local and fill in the actual values

# Database URL (replace with actual endpoint when RDS instance is ready)
DATABASE_URL=postgresql://username:password@your-rds-endpoint:5432/vatoweb

# Individual database connection parameters
POSTGRES_HOST=your-rds-endpoint
POSTGRES_PORT=5432
POSTGRES_DB=vatoweb
POSTGRES_USER=username
POSTGRES_PASSWORD=password

# Optional: Connection pool settings
POSTGRES_MAX_CONNECTIONS=20
POSTGRES_SSL_MODE=require